<div class="rnfb-font flex flex-1 bg-red text-white text-md md:text-lg lg:text-xl xl:text-2xl font-bold">
  <div class="bg-red-dark p-3.5 lg:p-5">View Locations</div>
  <div class="bg-red p-3.5 lg:p-5 flex-grow"><a href="/schedule/friday">Manage Events</a></div>
</div>

<h2 class="rnfb-font text-green-dark text-2xl md:text-3xl font-bold p-6">Edit Location: {{name}}</h2>

<form method="POST" action="/locations/edit" class="ml-6 pl-4 border-red border-l-4 w-5/6 max-w-lg mb-6">
  <input type="hidden" name="id" value="{{id}}">

  <label for="name" class="block mb-4">
    <span class="font-roboto text-green text-xl font-bold">Location Name</span>
    <input type="text" id="name" name="name" placeholder="Location name" value="{{name}}" class="block mt-1 rounded-md w-full text-gray-500 text-sm sm:text-base border-gray-400 focus:border-green focus:ring focus:ring-green focus:ring-opacity-20">
  </label>

  <label for="description" class="block mb-4">
    <span class="font-roboto text-green text-xl font-bold">Description</span>
    <textarea id="description" name="description" placeholder="Location description" rows="4" class="text-gray-500 text-sm sm:text-base block mt-1 rounded-md w-full border-gray-400 focus:border-green focus:ring focus:ring-green focus:ring-opacity-20">{{description}}</textarea>
  </label>

  <button class="font-roboto font-bold text-red text-2xl block w-full text-align-center">Update location</button>
</form>
