{{> locationsNav}}

<h2>Locations:</h2>

<ul class="cards">
  {{#each locations}}
  <li class="card">
    <div class="location">
      <a href="/events/{{id}}">{{name}}</a>
      <p>{{description}}</p>
      <span><a href="/locations/{{id}}/edit">Edit Location</a></span>
    </div>
  </li>
  {{/each}}
</ul>