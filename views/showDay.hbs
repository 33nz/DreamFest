<div class="flex flex-1 bg-red text-white text-md md:text-lg lg:text-xl xl:text-2xl font-bold w-screen">
  <div class="bg-red-dark p-3.5 lg:p-5">Line-up Manager</div>
  <div class="bg-red p-3.5 lg:p-5">
    <span class="">Friday</span>
    <span class="mx-2">Saturday</span>
    <span class="">Sunday</span>
  </div>
  <div class="bg-red p-3.5 lg:p-5 flex-grow text-center">Locations</div>
</div>

<h2 class="text-green-dark text-2xl font-bold p-6">Events: {{day}}</h2>

{{#each events}}
  <div class="flex ml-10">
    <img src="{{icon}}" class="w-20">
    <div>
      <a href="/events/{{id}}">{{name}}</a>
      <p>{{description}}</p>
    </div>
    <div class="grid grid-cols-2 grid-rows-2">
      <div>
        <span>Location</span>
        <span>{{location.name}}</span>
      </div>
      <div>
        <span>Time</span>
        <span>{{time}}</span>
      </div>
      <span class="col-span-2"><a href="">Edit Event</a></span>
    </div>
  </div>
{{/each}}
