body {
    width:100%
    height: 100%;

  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
  background: #fff;

}


a {
  color: #00B7FF;
text-decoration:none;
    
}

a:hover {
 color: #fff; 
 text-shadow: 1px 1px #aaa;
 transition: 0.3s;
}
nav {
 margin:20px;   
height: 50px;
float:left;
}
nav ul {
     position:relative; 
     left: -50px;
     top: -5px;
}

nav li {
   width: 93px;
   padding:10px;
   float: left;
   text-align:center;
   background:#004; 
   border: 1px solid #002;
   border-radius:5px; 
   margin:10px;
   list-style:none;
}

nav li:hover { 
 background:#002;
 transition:0.7s;
 box-shadow: 2px 1px #002;
}

